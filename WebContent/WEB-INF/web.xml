<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>GameInitServlet</servlet-name>
        <servlet-class>com.excilys.formation.projet.web.servlet.GameInitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameInitServlet</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>com.excilys.formation.projet.web.servlet.GameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/game/start/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InteractionServlet</servlet-name>
        <servlet-class>com.excilys.formation.projet.web.servlet.InteractionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InteractionServlet</servlet-name>
        <url-pattern>/game/interaction/*</url-pattern>
    </servlet-mapping>
</web-app>